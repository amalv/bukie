{
  "name": "bukie",
  "version": "0.27.0",
  "private": true,
  "scripts": {
    "build": "bun run db:migrate:pg && bun run db:seed:pg && next build",
    "build:ci": "next build",
    "build-storybook": "storybook build",
    "dev": "next dev",
    "db:generate": "bunx drizzle-kit generate",
    "db:generate:pg": "bunx drizzle-kit generate --config ./drizzle.config.pg.ts",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:migrate:pg": "bun ./scripts/db/migrate.pg.ts",
    "db:init:pg": "bun ./scripts/db/init.pg.ts",
    "db:seed": "bun ./scripts/db/seed.ts",
    "db:seed:pg": "bun ./scripts/db/seed.pg.ts",
    "db:reset": "bun ./scripts/db/reset.ts",
    "db:reseed": "bun run db:reset && bun run db:migrate && bun run db:seed",
    "lint": "bunx @biomejs/biome check --no-errors-on-unmatched .",
    "lint:fix": "bunx @biomejs/biome check --write --no-errors-on-unmatched .",
    "release": "semantic-release",
    "start": "bun run db:migrate:pg || true && next start",
    "start:ci": "next start",
    "storybook": "storybook dev -p 6006",
    "test": "bunx vitest --config vitest.config.unit.ts --run",
    "test:coverage": "bunx vitest --config vitest.config.unit.ts --coverage --run",
    "test:playwright": "bunx playwright test",
    "test:storybook": "bunx vitest --config vitest.config.storybook.ts",
    "images:optimize": "bun ./scripts/optimize-images.ts --webp --maxWidth 450 --quality 80",
    "db:sync:covers": "bunx tsx ./scripts/db/sync-covers.ts",
    "covers:fetch": "bun ./scripts/covers/fetch-covers.ts",
    "covers:fetch:node": "bunx tsx ./scripts/covers/fetch-covers.ts"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/next-plugin": "^2.4.14",
    "better-sqlite3": "^12.2.0",
    "drizzle-orm": "^0.44.4",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "postgres": "^3.4.7",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@chromatic-com/storybook": "4.1.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.54.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@storybook/addon-a11y": "9.1.1",
    "@storybook/addon-docs": "9.1.1",
    "@storybook/addon-onboarding": "9.1.1",
    "@storybook/addon-vitest": "9.1.1",
    "@storybook/nextjs-vite": "^9.1.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "@types/node": "^20",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "jsdom": "^26.1.0",
    "lefthook": "^1.12.2",
    "markdown-to-jsx": "^7.7.13",
    "msw": "^2.10.4",
    "playwright": "^1.54.2",
    "semantic-release": "^24.2.7",
    "sharp": "^0.34.3",
    "storybook": "9.1.1",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
